{
  "name": "polyglot-dev-toolkit",
  "version": "1.0.0",
  "description": "A comprehensive, production-ready toolkit showcasing modern development practices across Python, JavaScript, and Java ecosystems",
  "main": "src/javascript/utils.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/javascript/**/*.js",
    "lint:fix": "eslint src/javascript/**/*.js --fix",
    "start": "node src/javascript/utils.js",
    "docs": "jsdoc src/javascript/*.js -d docs/javascript"
  },
  "keywords": [
    "javascript",
    "utilities",
    "github",
    "portfolio",
    "testing",
    "ci-cd"
  ],
  "author": {
    "name": "Adin Bešlagić",
    "email": "beslagicadin@gmail.com",
    "url": "https://beslagicadin.vercel.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beslagicadin/polyglot-dev-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/beslagicadin/polyglot-dev-toolkit/issues"
  },
  "homepage": "https://github.com/beslagicadin/polyglot-dev-toolkit#readme",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.2",
    "jsdoc": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/javascript/**/*.test.js",
      "**/tests/javascript/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/javascript/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
